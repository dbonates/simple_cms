<%= error_messages_for(@page) %>

<table summary="sumario" class="show">
	
	<tr>
		<th>Subject</th>
		<td><%= f.select(:subject_id, @subjects.collect { |s| [s.name, s.id ]}) %></td>
	</tr>
	
	<tr>
		<th>name</th>
		<td><%= f.text_field(:name) %></td>
	</tr>
	
	<tr>
		<th>permalink</th>
		<td><%= f.text_field(:permalink) %></td>
	</tr>

	<tr>
		<th>position</th>
		<td><%= f.select(:position, 1..@page_count) %></td>
	</tr>

	<tr>
		<th>visible</th>
		<td><%= f.check_box(:visible) %></td>
	</tr>
	

</table>